<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>ua.rd.cm</groupId>
    <artifactId>conference</artifactId>
    <version>1.0</version>

    <packaging>pom</packaging>

    <properties>
        <spring-version>4.3.11.RELEASE</spring-version>
        <spring.security.version>4.2.3.RELEASE</spring.security.version>
        <hibernate.version>5.2.11.Final</hibernate.version>
        <hibernate-validator.version>5.2.4.Final</hibernate-validator.version>
        <hikariCP.version>2.6.1</hikariCP.version>
        <dbunit.version>2.4.9</dbunit.version>
        <spring.test.dbunit.version>1.3.0</spring.test.dbunit.version>
        <lombok.version>1.16.18</lombok.version>
        <commons-lang3.version>3.6</commons-lang3.version>
        <commons-fileupload.version>1.3.3</commons-fileupload.version>
        <spring.hateoas.version>0.23.0.RELEASE</spring.hateoas.version>
        <spring.data.jpa.version>1.11.7.RELEASE</spring.data.jpa.version>
        <spring.data.rest.version>3.0.0.RELEASE</spring.data.rest.version>
        <javax.mail.version>1.4.7</javax.mail.version>
        <javax.mail.api.version>1.6.0</javax.mail.api.version>
        <freemarket.version>2.3.23</freemarket.version>
        <javax.servlet.api.version>4.0.0</javax.servlet.api.version>
        <javax.servlet.jstl.version>1.2</javax.servlet.jstl.version>
        <h2database.version>1.4.196</h2database.version>
        <mysql.conector.java.version>5.1.44</mysql.conector.java.version>
        <javax.validation.api.version>2.0.0.Final</javax.validation.api.version>
        <fasterxml.version>2.9.1</fasterxml.version>
        <modelmapper.version>1.1.0</modelmapper.version>
        <slf4j.version>1.7.25</slf4j.version>
        <logback.version>1.2.3</logback.version>
        <log4j.version>1.2.17</log4j.version>
        <log4jdbc.version>0.2.7</log4jdbc.version>
        <mockito.version>1.10.19</mockito.version>
        <junit.version>4.12</junit.version>
        <jsonpath.version>2.4.0</jsonpath.version>
        <javax.el.version>2.2.4</javax.el.version>
    </properties>

    <profiles>
        <profile>
            <id>js</id>
            <modules>
                <module>react-js</module>
                <module>webapp</module>
            </modules>
        </profile>
        
        <profile>
            <id>java</id>
            <modules>
                <module>domain</module>
                <module>service</module>
                <module>webapp</module>
            </modules>
        </profile>

        <profile>
            <id>webapp</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <modules>
                <module>domain</module>
                <module>service</module>
                <module>react-js</module>
                <module>webapp</module>
            </modules>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
            </plugin>
        </plugins>

        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>exec-maven-plugin</artifactId>
                    <!-- 1.5.0 version has problem with executing npm on Windows -->
                    <version>1.6.0</version>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.7.0</version>
                    <configuration>
                        <source>1.8</source>
                        <target>1.8</target>
                    </configuration>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-war-plugin</artifactId>
                    <version>3.1.0</version>
                    <configuration>
                        <failOnMissingWebXml>false</failOnMissingWebXml>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <dependencies>
        <!-- utility -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>
        <!-- utility end -->

        <!-- logging -->
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
        </dependency>
        <!-- logging end -->

        <!-- testing -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-all</artifactId>
        </dependency>
        <!-- testing end -->
    </dependencies>

